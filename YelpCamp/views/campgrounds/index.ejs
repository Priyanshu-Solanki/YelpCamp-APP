<% layout('layouts/boilerplate') %>
    <h1 class="text-primary mb-4">All Campgrounds</h1>
    <% for(let c of campgrounds){ %>
        <div class="card mb-1">
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid" src="<%=c.image%>" alt="">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h4 class="card-title">
                            <%=c.title%>
                        </h4>
                        <hr>
                        <p class="card-text">
                            <%= c.description %>
                        </p>
                        <span class="text-muted">
                            <%= c.location %>
                        </span>
                        </p>
                        <a href="/campgrounds/<%=c._id%>" class="btn btn-primary">
                            View <%= c.title%>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <% } %>